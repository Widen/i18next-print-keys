{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "removeComments": true,
    // Strictness
    "strict": true,
    "skipLibCheck": true,
    // Export source maps and declaration maps
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Input and output
    "rootDir": "src",
    "outDir": "lib"
  }
}
